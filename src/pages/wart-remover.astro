---
import ContentContainer from '../components/ContentContainer.astro';
import Footer from '../components/Footer.astro';
import ImageCarousel from '../components/ImageCarousel.astro';
import Layout from '../layouts/Layout.astro';
import OrderForm from '../components/OrderForm.astro';

const pixelId = '2270773153366260';

const images = [
  { src: '/assets/CqZCvwYMYMftg6CqZrb1vacSU74XQT7iKpgyV35KQ.webp', alt: 'Wart remover product photo 1' },
  { src: '/assets/CqZhban9bBE5H43CqZrU3eN3ZvdfcsTcS4nAy69lZKw.webp', alt: 'Wart remover product photo 2' },
  { src: '/assets/CqZfvDDKovfjCuKCqZrJNAw576iz2XTBiPH7KjS6OxQ.webp', alt: 'Wart remover product photo 3' },
  { src: '/assets/CqZfq93ZtnZmfDyCqZr6FXN99jhpdQTXiQhLVDGINfw.webp', alt: 'Wart remover product photo 4' }
];

const galleryImages = [
  { src: '/assets/Generated-Image-September-06-2025-12_45AM-1.webp', alt: 'Before and after wart remover 1' },
  { src: '/assets/CqMW3D9mNzwssnuCqMqOoqbZJORdtXRJCWI6BWRP8yg.webp', alt: 'Before and after wart remover 2' },
  { src: '/assets/CqMqWVZtvfEqh7lCqMUN17O42y6X3yT3GZW5e9PBKB1A.webp', alt: 'Before and after wart remover 3' },
  { src: '/assets/CqMWEkjmCK9bsD7CqM9iYlA3oJg4CdR9WgB5kpv0peFg-1.webp', alt: 'Before and after wart remover 4' },
  { src: '/assets/CqMJ4NGW1TvELe2CqMGhGauimpXZLjQcyjN8eZUSwvwg-1.webp', alt: 'Before and after wart remover 5' }
];

const problemPoints = [
  'Punya masalah kutil yang membandel?',
  'Sudah coba berbagai cara tapi tetap muncul lagi?',
  'Malu karena kutil di tangan/kaki bikin tidak percaya diri?',
  'Atau takut biayanya mahal kalau ke klinik?'
];
---

<Layout pixelId={pixelId}>
  <ContentContainer>
    <img
      src="/assets/Generated-Image-September-07-2025-12_58AM.webp"
      alt="Ilustrasi produk penghilang kutil"
      class="mx-auto mb-6 w-full max-w-xl rounded-lg shadow-lg"
    />

    <section class="mx-auto mb-8 max-w-2xl text-center">
      <h2 class="mb-4 text-center text-2xl font-semibold text-slate-800">
        Anda Mengalami Masalah Ini?
      </h2>
      <ul class="inline-block space-y-3 text-left text-lg text-slate-700 list-disc marker:text-red-500 pl-6">
        {problemPoints.map((point) => (
          <li>{point}</li>
        ))}
      </ul>
    </section>
    <ul class="my-8 text-center">
      {galleryImages.map((image) => (
        <li>
          <img src={image.src} alt={image.alt} class="w-full" />
        </li>
      ))}
    </ul>
		<h2 class="mb-4 text-center text-4xl font-semibold text-slate-800">
      Testimoni?
    </h2>
    <ImageCarousel images={images} />
      <section class="mt-10 mb-8 text-center">
      <h3 class="text-3xl font-bold text-slate-900">-Wart Remover-</h3>
      <p class="mt-2 text-lg text-slate-600">
        Harga Normal <span class="line-through">Rp. 99.000</span>
      </p>
      <p class="mt-3 text-xl font-semibold text-red-500">
        Khusus Pembelian Hari ini akan mendapatkan special promo:
      </p>
      <div class="mt-5 rounded-lg bg-green-500 px-6 py-6 shadow-lg">
        <p class="text-2xl font-bold uppercase text-white">Beli 1 Gratis 1</p>
        <p class="mt-2 text-2xl font-bold text-white">Rp 99.000</p>
      </div>
      <p class="mt-5 text-base text-slate-900">
        Masukan <span class="font-semibold text-green-600">Nama dan Nomor WhatsApp</span> kamu untuk mendapatkan
        <span class="font-semibold text-red-500"> special promo</span> dan dihubungi oleh admin kami segera.
      </p>
    </section>

    <OrderForm
      product_id="SKU-003"
      product_name="Penghilang Kutil"
      price={99000}
      currency="IDR"
      quantity={1}
    />
  </ContentContainer>
  <Footer />
</Layout>
